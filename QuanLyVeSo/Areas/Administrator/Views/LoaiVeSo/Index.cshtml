@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<QuanLyVeSo.Areas.Administrator.Models.LoaiVeso>
<link href="~/Areas/Administrator/Content/TrangChuCss.css" rel="stylesheet" />

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<p>
@Html.ActionLink("Thêm mới loại vé số", "ThemMoi")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().MaLoaiVeSo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Tinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().GiaVe)
        </th>
        <th>
            Sửa
        </th>
        <th>
            Xóa
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaLoaiVeSo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tinh)
            </td>
            <td>
                @string.Format("{0:0,0}", item.GiaVe) vnđ
            </td>        
            <td>
                @Html.ActionLink("Sửa", "ChinhSua", new { @_MaLoaiVeSo = item.MaLoaiVeSo })
            </td>
            <td>
                @Html.ActionLink("Xóa", "Xoa", new { @_MaLoaiVeSo = item.MaLoaiVeSo })
            </td>
        </tr>
    }

</table>
<div id="divBody">
    <br />
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
</div>
<div id="divBody" class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", "LoaiVeSo", new { _Page = page }))
</div>
