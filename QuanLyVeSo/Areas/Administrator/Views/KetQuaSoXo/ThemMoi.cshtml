@model QuanLyVeSo.Areas.Administrator.Models.KetQuaSoXo
@{
    ViewBag.Title = "ThemMoi";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Thông tin </h2>

@using (Html.BeginForm("ThemMoi", "KetQuaSoXo", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

       
        <div class="form-group">
            @Html.LabelFor(model => model.LoaiVeso.Tinh, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaLoaiVeSo")
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Giai.TenGiai, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaGiai")
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NgaySo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgaySo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgaySo, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SoTrung, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoTrung, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SoTrung, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" style="background-color:green;" value="Thêm" class="btn btn-default" />
        </div>
    </div>
}

<div style="text-align:left; color:red;">
    @Html.ActionLink("Trở lại Trang Quản lý SLĐK", "Index")
</div>

